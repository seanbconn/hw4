<h1>New Entry</h1>

<% if @user != nil %>

  <form action="/entries" method="post">
    <div class="mb-3">
      <p>
          <input type="hidden" name="place_id" value="<%= params["place_id"] %>">
      </p>

      <p>
          <label for="title_input">Title</label>
          <input type="text" name="title" id="title_input" class="form-control">
      </p>

      <p>
          <label for="occurred_on_input">Occurred On</label>
          <input type="date" name="occurred_on" id="occurred_on_input">
      </p>

      <div class="mb-3">
          <%= form.label "uploaded_image", :class => "form-label" %>
          <%= form.file_field "uploaded_image", :accept => "image/png,image/jpg,image/jpeg,image/gif", :class => "form-control" %>
      </div>

      <p>
          <label for="description_input">Description</label>
          <input type="text" name="description" id="description_input" class="form-control">
      </p>

    </div>

    <button class="btn btn-primary">Save</button>
    <a href="/places">Cancel</a>
  </form>
<% else %>
  You must first <a href="/login">login</a> to post.
<% end %>